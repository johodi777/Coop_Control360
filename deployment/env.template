# Template de configuración .env para deployment independiente por cliente
# Copiar este archivo a /var/www/<cliente>/.env y configurar los valores

# ============================================
# IDENTIFICACIÓN DEL CLIENTE
# ============================================
CLIENT_NAME=clienteA
APP_NAME=CoopControl 360 - Cliente A
APP_URL=https://clienteA.com

# ============================================
# BASE DE DATOS
# ============================================
DB_HOST=db
DB_PORT=3306
DB_NAME=clienteA_db
DB_USER=coop
DB_PASS=CHANGE_THIS_PASSWORD
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD

# ============================================
# BACKEND API
# ============================================
NODE_ENV=production
PORT=4000
BACKEND_PORT=4000
JWT_SECRET=CHANGE_THIS_JWT_SECRET_KEY_MIN_32_CHARS
JWT_EXPIRES_IN=24h

# ============================================
# FRONTEND
# ============================================
FRONTEND_PORT=3000
VITE_API_URL=https://clienteA.com/api

# ============================================
# EMAIL (Nodemailer)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@clienteA.com

# ============================================
# PASARELAS DE PAGO
# ============================================
PAYU_MERCHANT_ID=
PAYU_API_KEY=
PAYU_API_LOGIN=
PAYU_ACCOUNT_ID=
PAYU_TEST=true

MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_TEST=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ============================================
# SEGURIDAD
# ============================================
ALLOWED_ORIGINS=https://clienteA.com
CORS_ORIGIN=https://clienteA.com

# ============================================
# BACKUPS
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2 AM diario
BACKUP_RETENTION_DAYS=30

# ============================================
# DOMINIO Y SSL
# ============================================
APP_DOMAIN=clienteA.com
SSL_EMAIL=admin@clienteA.com

