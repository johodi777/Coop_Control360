# Template de configuración .env para producción en DigitalOcean
# Con Managed Database, Load Balancer y SSL

# ============================================
# IDENTIFICACIÓN DEL CLIENTE
# ============================================
CLIENT_NAME=clienteA
APP_NAME=CoopControl 360 - Cliente A
APP_URL=https://clienteA.com
APP_DOMAIN=clienteA.com

# ============================================
# DOCKER REGISTRY (DigitalOcean Container Registry)
# ============================================
DOCKER_REGISTRY=registry.digitalocean.com
DOCKER_REGISTRY_NAME=tu-registry-name
DOCKER_REGISTRY_TOKEN=CHANGE_THIS_TOKEN

# ============================================
# BASE DE DATOS (DigitalOcean Managed Database)
# ============================================
# Obtener estos valores del panel de DigitalOcean
# Database > Tu Database > Connection Details
DB_HOST=db-postgresql-nyc3-12345.db.ondigitalocean.com
DB_PORT=25060
DB_NAME=coopcontrol
DB_USER=doadmin
DB_PASS=CHANGE_THIS_PASSWORD
DB_SSL=true
DB_SSL_CA=/etc/ssl/certs/ca-certificates.crt

# Si usas MySQL Managed Database:
# DB_HOST=db-mysql-nyc3-12345.db.ondigitalocean.com
# DB_PORT=25060

# ============================================
# BACKEND API
# ============================================
NODE_ENV=production
PORT=4000
JWT_SECRET=CHANGE_THIS_JWT_SECRET_KEY_MIN_48_CHARS_VERY_SECURE
JWT_EXPIRES_IN=24h

# ============================================
# FRONTEND
# ============================================
VITE_API_URL=https://clienteA.com/api

# ============================================
# EMAIL (Nodemailer)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@clienteA.com

# ============================================
# PASARELAS DE PAGO
# ============================================
PAYU_MERCHANT_ID=
PAYU_API_KEY=
PAYU_API_LOGIN=
PAYU_ACCOUNT_ID=
PAYU_TEST=false

MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_TEST=false

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ============================================
# SEGURIDAD
# ============================================
ALLOWED_ORIGINS=https://clienteA.com
CORS_ORIGIN=https://clienteA.com

# ============================================
# BACKUPS
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2 AM diario
BACKUP_RETENTION_DAYS=30

# ============================================
# SSL
# ============================================
SSL_EMAIL=admin@clienteA.com
CERTBOT_EMAIL=admin@clienteA.com

# ============================================
# MONITORING (Opcional)
# ============================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

